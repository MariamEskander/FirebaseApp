<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/faq"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <Button
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_chat"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:id="@+id/activity_chats_btn_add_chat" />


        <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_chats_rv_chats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dip"
        android:orientation="vertical" />

    <ProgressBar
        android:id="@+id/activity_chats_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/activity_chats_txt_no_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="31.61sp"
        android:padding="10dp"
        android:text="@string/no_result"
        android:textAlignment="center"
        android:textSize="14.5sp" />
    </LinearLayout>

</RelativeLayout>